<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.alnegasoft.mascotamd">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MascotasVotadas"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".ComentariosActivity" />
        <activity android:name=".AcercaDeActivity" />
        <activity android:name=".ConfigurarCuenta" />

        <service android:name=".NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".NotificationIDTokenService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".LikeMascota">
            <intent-filter>
                <action android:name="LIKE_MASCOTA" />
            </intent-filter>
        </receiver>
        <receiver android:name=".FollowUser">
            <intent-filter>
                <action android:name="FOLLOW" />
            </intent-filter>
        </receiver>
        <receiver android:name=".UnFollowUser">
            <intent-filter>
                <action android:name="UNFOLLOW" />
            </intent-filter>
        </receiver>

        <receiver android:name=".FotosRecientes">
            <intent-filter>
                <action android:name="RECIENTES" />
            </intent-filter>
        </receiver>

        <activity android:name=".UsuarioLikeActivity"></activity>
    </application>

</manifest>